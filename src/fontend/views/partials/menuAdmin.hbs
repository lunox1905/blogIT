<script>
  var m = document.querySelector('.menu-icon')
  m.onclick = () => {
    console.log('d')
    var c = document.querySelector('.menu')
      if(!c.closest('.hide')) {
        document.querySelector('.container-menu').classList.add('hide')
        document.querySelector('.container-menu').style.transform = 'translateX(-100%)'
        document.querySelector('.container-post').style.transform = 'translateX(0px)'
        document.querySelector('.container-manager').style.transform = 'translateX(0px)'
        
      } else {
        
        document.querySelector('.container-menu').classList.remove('hide')
        document.querySelector('.container-menu').style.transform = 'translateX(0%)'
        document.querySelector('.container-post').style.transform = 'translateX(10%)'
        document.querySelector('.container-manager').style.transform = 'translateX(10%)'
      }
  }
</script>